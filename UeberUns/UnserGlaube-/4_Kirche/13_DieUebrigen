    <div>
      <figure class="o-figure u-padding--right">
        <div class="u-image--wrap fitvid">
          <iframe width="560" height="315" src="https://www.youtube-nocookie.com/embed/bQv56qxxJqA" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
